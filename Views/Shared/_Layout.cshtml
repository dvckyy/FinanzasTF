<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/assets/css/bootstrap.min.css")" rel="stylesheet" type="text/css">
    <link href="@Url.Content("~/Content/assets/css/dashboard.css")" rel="stylesheet" type="text/css">
    <script src="@Url.Content("~/Content/assets/js/modernizr.min.js")"></script>
</head>
<body>
    <!--Top Navbar-->
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <!--Body Content-->
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!--Sidebar Left-->
                <div class="col-sm-3 col-md-2 sidebar">
                    <ul class="nav nav-sidebar">
                        <li>@Html.ActionLink("Personas", "Listado","Persona")</li>
                        <li>@Html.ActionLink("Flujo de Caja Familiar", "Listado", "Flujo")</li>
                        <li>@Html.ActionLink("Resultados de Flujo de Caja Familiar", "Resultados", "Flujo")</li>
                    </ul>
                </div>
                <!--Actual Body-->
                <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                    @RenderBody()
                    <hr />
                    <footer>
                        <p>&copy; v0.1.1 - Finanzas Caja Familiar</p>
                    </footer>
                </div>
            </div>                        
        </div>
    </div>
    <script>
            var resizefunc = [];
    </script>
    <!-- Plugins  -->
    <script src="@Url.Content("~/Content/assets/js/jquery-3.2.1.min.js")"></script>
    <!-- Popper for Bootstrap -->
    <script src="@Url.Content("~/Content/assets/js/bootstrap.min.js")"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
